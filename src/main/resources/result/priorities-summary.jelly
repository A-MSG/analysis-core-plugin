<!--
  Section header
-->
<j:jelly xmlns:j="jelly:core">

  <h2>${%Summary}</h2>
  <table class="pane" id="priority.summary">
    <tr>
      <td class="pane-header">${%Total}</td>
      <j:forEach var="priority" items="${it.getAllPriorities()}">
        <td class="pane-header">${priority.localizedString}</td>
      </j:forEach>
    </tr>
    <tbody>
      <tr>
        <td class="pane" id="all-priorities">${it.numberOfAnnotations}</td>
        <j:forEach var="priority" items="${it.getAllPriorities()}">
          <td class="pane">
            <div id="${priority.priorityName}">
              <j:if test="${it.getNumberOfAnnotations(priority.priorityName) == 0}">
                0
              </j:if>
              <j:if test="${it.getNumberOfAnnotations(priority.priorityName) != 0}">
                <a href="${priority}">${it.getNumberOfAnnotations(priority.priorityName)}</a>
              </j:if>
            </div>
          </td>
        </j:forEach>
      </tr>
    </tbody>
  </table>
</j:jelly>